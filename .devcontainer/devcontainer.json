{
  "name": "ReSim Github Action Developer Environment",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.vscode-pull-request-github",
        "ms-vsliveshare.vsliveshare",
        "vscode-icons-team.vscode-icons",
        "visualstudioexptteam.vscodeintellicode"
      ],
      "settings": {
        "terminal.integrated.profiles.linux": {
          "zsh (login)": {
            "path": "zsh",
            "args": ["-l"]
          }
        }
      }
    }
  },
  "image": "nodejs/devcontainer:nightly", // Stealing an existing image for now
  "initializeCommand": "docker system prune -f -a",
  "remoteEnv": {
    // localWorkspaceFolder is the host directory which is needed for volume mount commands from inside the container
    "HOST_PROJECT_PATH": "${localWorkspaceFolder}"
  }
}